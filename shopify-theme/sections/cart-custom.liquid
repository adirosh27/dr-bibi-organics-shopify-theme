{% comment %}
  Custom Cart Page for Dr. Bibi Organics
  Matches the style of the cart drawer with live updates
{% endcomment %}

<!-- Load Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400;1,700&display=swap" rel="stylesheet">

<style>
.drb-cart-page {
    font-family: 'Jost', sans-serif !important;
    max-width: 1024px;
    margin: 0 auto;
    padding: 24px 16px 60px;
    min-height: 60vh;
}
.drb-cart-page * {
    box-sizing: border-box;
}
.drb-cart-page h1 {
    font-family: 'Playfair Display', serif !important;
    font-size: 28px;
    font-weight: 600;
    color: #1A3A2E;
    margin-bottom: 24px;
    text-align: center;
}
@media (min-width: 768px) {
    .drb-cart-page {
        padding: 40px 24px 80px;
    }
    .drb-cart-page h1 {
        font-size: 36px;
        margin-bottom: 32px;
    }
}
.drb-cart-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
}
@media (min-width: 768px) {
    .drb-cart-container {
        grid-template-columns: 1fr 380px;
        gap: 48px;
    }
}
.drb-cart-items {
    display: flex;
    flex-direction: column;
    gap: 12px;
}
.drb-cart-item {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    background: rgba(196,213,204,0.2);
    padding: 16px;
    border-radius: 16px;
    border: 1px solid rgba(45,95,76,0.1);
}
.drb-cart-item img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 10px;
    flex-shrink: 0;
}
@media (min-width: 768px) {
    .drb-cart-item {
        flex-wrap: nowrap;
        padding: 20px;
        gap: 16px;
    }
    .drb-cart-item img {
        width: 100px;
        height: 100px;
        border-radius: 12px;
    }
}
.drb-cart-item-details {
    flex: 1;
    min-width: 0;
}
.drb-cart-item-title {
    font-weight: 600;
    color: #1A3A2E;
    font-size: 14px;
    margin-bottom: 4px;
}
@media (min-width: 768px) {
    .drb-cart-item-title {
        font-size: 16px;
    }
}
.drb-cart-item-variant {
    font-size: 12px;
    color: rgba(71,85,105,0.6);
    margin-bottom: 6px;
}
.drb-cart-item-price {
    font-size: 13px;
    color: rgba(71,85,105,0.7);
    margin-bottom: 10px;
}
.drb-quantity-controls {
    display: flex;
    align-items: center;
    gap: 8px;
}
@media (min-width: 768px) {
    .drb-quantity-controls {
        gap: 12px;
    }
}
.drb-quantity-btn {
    width: 28px;
    height: 28px;
    border: 2px solid #C4D5CC;
    border-radius: 6px;
    background: white;
    cursor: pointer;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #2D5F4C;
    transition: all 0.2s;
}
@media (min-width: 768px) {
    .drb-quantity-btn {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        font-size: 18px;
    }
}
.drb-quantity-btn:hover {
    background: #2D5F4C;
    color: white;
    border-color: #2D5F4C;
}
.drb-quantity-value {
    font-weight: 600;
    font-size: 16px;
    min-width: 32px;
    text-align: center;
    color: #1A3A2E;
}
.drb-remove-btn {
    background: none;
    border: none;
    color: #DC2626;
    font-size: 13px;
    cursor: pointer;
    margin-left: auto;
    padding: 4px 8px;
}
.drb-remove-btn:hover {
    text-decoration: underline;
}
.drb-cart-item-total {
    text-align: right;
    min-width: 70px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-top: 8px;
    border-top: 1px solid rgba(45,95,76,0.1);
}
@media (min-width: 768px) {
    .drb-cart-item-total {
        width: auto;
        min-width: 80px;
        padding-top: 0;
        border-top: none;
    }
}
.drb-cart-item-total .original {
    font-size: 12px;
    color: rgba(71,85,105,0.5);
    text-decoration: line-through;
}
.drb-cart-item-total .final {
    font-size: 16px;
    font-weight: 600;
    color: #1A3A2E;
}
@media (min-width: 768px) {
    .drb-cart-item-total .final {
        font-size: 18px;
    }
}
.drb-cart-item-total .savings {
    font-size: 11px;
    color: #2D5F4C;
    font-weight: 500;
}
.drb-cart-summary {
    background: linear-gradient(to bottom right, rgba(232,237,231,0.5), rgba(200,229,211,0.3));
    padding: 24px;
    border-radius: 20px;
    border: 1px solid rgba(45,95,76,0.1);
    height: fit-content;
}
@media (min-width: 768px) {
    .drb-cart-summary {
        padding: 32px;
        border-radius: 24px;
        position: sticky;
        top: 100px;
    }
}
.drb-cart-summary h2 {
    font-family: 'Playfair Display', serif !important;
    font-size: 20px;
    font-weight: 600;
    color: #1A3A2E;
    margin-bottom: 20px;
}
@media (min-width: 768px) {
    .drb-cart-summary h2 {
        font-size: 24px;
        margin-bottom: 24px;
    }
}
.drb-summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
    font-size: 14px;
}
@media (min-width: 768px) {
    .drb-summary-row {
        margin-bottom: 12px;
        font-size: 15px;
    }
}
.drb-summary-row.total {
    margin-top: 12px;
    padding-top: 12px;
    border-top: 2px solid rgba(45,95,76,0.2);
    font-size: 16px;
}
@media (min-width: 768px) {
    .drb-summary-row.total {
        margin-top: 16px;
        padding-top: 16px;
        font-size: 18px;
    }
}
.drb-summary-row.total span:last-child {
    font-family: 'Playfair Display', serif;
    font-size: 24px;
    font-weight: 600;
    color: #2D5F4C;
}
@media (min-width: 768px) {
    .drb-summary-row.total span:last-child {
        font-size: 28px;
    }
}
.drb-summary-row.discount {
    background: rgba(45,95,76,0.1);
    padding: 10px 12px;
    border-radius: 8px;
    margin-bottom: 12px;
    color: #2D5F4C;
    font-weight: 500;
}
.drb-checkout-btn {
    display: block;
    width: 100%;
    background: linear-gradient(to right, #2D5F4C, #1A3A2E);
    color: white;
    padding: 14px 24px;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    margin-top: 20px;
    box-shadow: 0 10px 30px rgba(45,95,76,0.3);
    transition: transform 0.2s, box-shadow 0.2s;
}
@media (min-width: 768px) {
    .drb-checkout-btn {
        padding: 16px 32px;
        font-size: 18px;
        margin-top: 24px;
    }
}
.drb-checkout-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(45,95,76,0.4);
}
.drb-continue-shopping {
    display: block;
    text-align: center;
    margin-top: 12px;
    color: #2D5F4C;
    font-weight: 500;
    font-size: 14px;
    text-decoration: none;
}
@media (min-width: 768px) {
    .drb-continue-shopping {
        margin-top: 16px;
        font-size: 15px;
    }
}
.drb-continue-shopping:hover {
    text-decoration: underline;
}
.drb-cart-empty {
    text-align: center;
    padding: 48px 16px;
}
@media (min-width: 768px) {
    .drb-cart-empty {
        padding: 80px 24px;
    }
}
.drb-cart-empty svg {
    width: 60px;
    height: 60px;
    color: rgba(45,95,76,0.2);
    margin-bottom: 20px;
}
@media (min-width: 768px) {
    .drb-cart-empty svg {
        width: 80px;
        height: 80px;
        margin-bottom: 24px;
    }
}
.drb-cart-empty h2 {
    font-family: 'Playfair Display', serif !important;
    font-size: 24px;
    color: #1A3A2E;
    margin-bottom: 12px;
}
@media (min-width: 768px) {
    .drb-cart-empty h2 {
        font-size: 28px;
        margin-bottom: 16px;
    }
}
.drb-cart-empty p {
    color: rgba(71,85,105,0.7);
    margin-bottom: 24px;
    font-size: 14px;
}
@media (min-width: 768px) {
    .drb-cart-empty p {
        margin-bottom: 32px;
        font-size: 16px;
    }
}
.drb-cart-empty a {
    display: inline-block;
    background: linear-gradient(to right, #2D5F4C, #1A3A2E);
    color: white;
    padding: 12px 28px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 15px;
    text-decoration: none;
}
@media (min-width: 768px) {
    .drb-cart-empty a {
        padding: 14px 32px;
        font-size: 16px;
    }
}
.drb-loading {
    opacity: 0.6;
    pointer-events: none;
}
</style>

<div class="drb-cart-page">
    <h1>Your Cart</h1>

    <div id="drbCartPageContent">
        {% if cart.item_count > 0 %}
        <div class="drb-cart-container">
            <div class="drb-cart-items" id="drbCartItemsList">
                {% for item in cart.items %}
                <div class="drb-cart-item" data-key="{{ item.key }}">
                    <img src="{{ item.image | image_url: width: 200 }}" alt="{{ item.title }}">
                    <div class="drb-cart-item-details">
                        <div class="drb-cart-item-title">{{ item.product.title }}</div>
                        {% if item.variant.title != 'Default Title' %}
                        <div class="drb-cart-item-variant">{{ item.variant.title }}</div>
                        {% endif %}
                        <div class="drb-cart-item-price">{{ item.final_price | money }} each</div>
                        <div class="drb-quantity-controls">
                            <button class="drb-quantity-btn" onclick="updateCartQuantity('{{ item.key }}', {{ item.quantity | minus: 1 }})">‚àí</button>
                            <span class="drb-quantity-value">{{ item.quantity }}</span>
                            <button class="drb-quantity-btn" onclick="updateCartQuantity('{{ item.key }}', {{ item.quantity | plus: 1 }})">+</button>
                            <button class="drb-remove-btn" onclick="updateCartQuantity('{{ item.key }}', 0)">Remove</button>
                        </div>
                    </div>
                    <div class="drb-cart-item-total">
                        {% if item.original_line_price > item.final_line_price %}
                        <div class="original">{{ item.original_line_price | money }}</div>
                        {% endif %}
                        <div class="final">{{ item.final_line_price | money }}</div>
                        {% if item.original_line_price > item.final_line_price %}
                        <div class="savings">Save {{ item.original_line_price | minus: item.final_line_price | money }}</div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="drb-cart-summary" id="drbCartSummary">
                <h2>Order Summary</h2>

                {% if cart.cart_level_discount_applications.size > 0 %}
                    {% for discount in cart.cart_level_discount_applications %}
                    <div class="drb-summary-row discount">
                        <span>üè∑Ô∏è {{ discount.title }}</span>
                        <span>-{{ discount.total_allocated_amount | money }}</span>
                    </div>
                    {% endfor %}
                {% endif %}

                <div class="drb-summary-row">
                    <span>Subtotal ({{ cart.item_count }} items)</span>
                    <span id="drbSubtotal">{{ cart.items_subtotal_price | money }}</span>
                </div>

                {% if cart.total_discount > 0 %}
                <div class="drb-summary-row" style="color: #2D5F4C;">
                    <span>You save</span>
                    <span id="drbDiscount">{{ cart.total_discount | money }}</span>
                </div>
                {% endif %}

                <div class="drb-summary-row">
                    <span>Shipping</span>
                    <span style="color: #2D5F4C; font-weight: 500;">Free</span>
                </div>

                <div class="drb-summary-row total">
                    <span>Total</span>
                    <span id="drbTotal">{{ cart.total_price | money }}</span>
                </div>

                <a href="/checkout" class="drb-checkout-btn">
                    Proceed to Checkout
                </a>
                <a href="/products/butter-oasis-moisturizing-balm" class="drb-continue-shopping">
                    ‚Üê Continue Shopping
                </a>
            </div>
        </div>
        {% else %}
        <div class="drb-cart-empty">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <h2>Your cart is empty</h2>
            <p>Looks like you haven't added anything to your cart yet.</p>
            <a href="/products/butter-oasis-moisturizing-balm">Start Shopping</a>
        </div>
        {% endif %}
    </div>
</div>

<script>
async function updateCartQuantity(key, quantity) {
    const cartPage = document.querySelector('.drb-cart-page');
    cartPage.classList.add('drb-loading');

    try {
        const response = await fetch('/cart/change.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: key, quantity: quantity })
        });
        const cart = await response.json();

        // Refresh the page to show updated cart
        // This ensures Liquid re-renders with correct values
        window.location.reload();

    } catch (error) {
        console.error('Error updating cart:', error);
        cartPage.classList.remove('drb-loading');
        alert('Error updating cart. Please try again.');
    }
}

// Update header cart count when page loads
document.addEventListener('DOMContentLoaded', function() {
    if (typeof refreshDrbCart === 'function') {
        // Sync with cart drawer
        fetch('/cart.js')
            .then(res => res.json())
            .then(cart => {
                const cartCount = document.getElementById('drbCartCount');
                if (cartCount) {
                    if (cart.item_count > 0) {
                        cartCount.textContent = cart.item_count;
                        cartCount.style.display = 'flex';
                    } else {
                        cartCount.style.display = 'none';
                    }
                }
            });
    }
});
</script>

