{% comment %}
  Exit Intent Popup for Dr. Bibi Organics
  Shows 15% discount offer when visitor is about to leave
{% endcomment %}

<style>
/* Exit popup styles */
.drb-exit-popup {
    position: fixed;
    inset: 0;
    background: rgba(31,41,55,0.8);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
}
.drb-exit-popup.show {
    opacity: 1;
    visibility: visible;
}
.drb-exit-popup-content {
    background: white;
    border-radius: 24px;
    max-width: 448px;
    width: 100%;
    box-shadow: 0 25px 50px -12px rgba(0,0,0,0.25);
    transform: scale(0.95);
    transition: transform 0.3s ease;
    position: relative;
    overflow: hidden;
}
.drb-exit-popup.show .drb-exit-popup-content {
    transform: scale(1);
}
.drb-exit-shine {
    position: relative;
    overflow: hidden;
}
.drb-exit-shine::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
}
.drb-exit-shine:hover::before {
    left: 100%;
}
</style>

<!-- Exit Intent Popup -->
<div id="drbExitPopup" class="drb-exit-popup">
    <div class="drb-exit-popup-content">
        <!-- Close button -->
        <button id="drbCloseExitPopup" style="position: absolute; top: 16px; right: 16px; background: none; border: none; cursor: pointer; color: rgba(100,116,139,0.5); z-index: 10; padding: 8px;">
            <svg style="width: 24px; height: 24px;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>

        <!-- Decorative background -->
        <div style="position: absolute; top: 0; right: 0; width: 160px; height: 160px; background: linear-gradient(to bottom right, rgba(45,95,76,0.1), rgba(212,175,55,0.1)); border-radius: 50%; filter: blur(48px);"></div>

        <div id="drbExitPopupInner" style="position: relative; padding: 32px; text-align: center;">
            <div style="font-size: 48px; margin-bottom: 16px;">âœ‹</div>
            <h3 style="font-family: 'Playfair Display', Georgia, serif; font-size: 28px; font-weight: 700; color: #2D5F4F; margin-bottom: 12px;">Wait! Don't Leave Empty-Handed</h3>
            <p style="font-size: 18px; color: #64748B; margin-bottom: 24px;">Get <span style="font-weight: 700; color: #2D5F4C;">15% OFF</span> your first order of Butter Oasis Balm</p>

            <form id="drbExitForm" style="display: flex; flex-direction: column; gap: 16px;">
                <input
                    type="email"
                    id="drbExitEmail"
                    placeholder="Enter your email"
                    required
                    style="width: 100%; padding: 16px 24px; border-radius: 9999px; border: 2px solid rgba(196,213,204,0.3); font-size: 16px; outline: none; box-sizing: border-box; transition: border-color 0.2s;"
                    onfocus="this.style.borderColor='#2D5F4C'"
                    onblur="this.style.borderColor='rgba(196,213,204,0.3)'"
                >
                <button type="submit" class="drb-exit-shine" style="width: 100%; background: linear-gradient(to right, #2D5F4C, #1A3A2E); color: white; padding: 16px 32px; border-radius: 9999px; font-weight: 700; font-size: 16px; border: none; cursor: pointer; box-shadow: 0 10px 25px rgba(45,95,76,0.3); transition: all 0.3s;">
                    Get My 15% OFF Code
                </button>
            </form>

            <p style="font-size: 12px; color: rgba(100,116,139,0.6); margin-top: 16px;">Your discount code will appear instantly. No spam, ever.</p>
        </div>
    </div>
</div>

<script>
(function() {
    // Exit intent state
    let exitIntentShown = false;
    const exitPopup = document.getElementById('drbExitPopup');
    const closeBtn = document.getElementById('drbCloseExitPopup');
    const exitForm = document.getElementById('drbExitForm');
    const exitInner = document.getElementById('drbExitPopupInner');

    // Check if already shown (using sessionStorage for per-session, localStorage for permanent)
    if (sessionStorage.getItem('drbExitPopupShown')) {
        exitIntentShown = true;
    }

    // Detect mobile device
    const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);

    // Desktop: Show popup when mouse leaves viewport from the top
    if (!isMobile) {
        document.addEventListener('mouseout', function(e) {
            if (!exitIntentShown && e.clientY <= 0) {
                showExitPopup();
            }
        });
    }

    // Mobile: Show popup after scrolling down 50% of page
    if (isMobile) {
        let hasScrolled = false;
        window.addEventListener('scroll', function() {
            if (hasScrolled || exitIntentShown) return;

            const scrollPercent = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;

            if (scrollPercent > 50) {
                hasScrolled = true;
                // Delay popup on mobile
                setTimeout(showExitPopup, 1000);
            }
        });
    }

    // Close popup handlers
    closeBtn.addEventListener('click', closeExitPopup);
    exitPopup.addEventListener('click', function(e) {
        if (e.target === exitPopup) {
            closeExitPopup();
        }
    });

    // Escape key closes popup
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && exitPopup.classList.contains('show')) {
            closeExitPopup();
        }
    });

    // Handle form submission
    exitForm.addEventListener('submit', function(e) {
        e.preventDefault();
        const email = document.getElementById('drbExitEmail').value;

        // Store email to prevent showing again
        localStorage.setItem('drbExitPopupEmail', email);
        sessionStorage.setItem('drbExitPopupShown', 'true');

        // Subscribe to Shopify newsletter (optional - if you have Klaviyo or Mailchimp, use their API instead)
        // For now, we'll just show the discount code

        // Show success message with discount code
        exitInner.innerHTML = `
            <div style="text-align: center; padding: 24px 0;">
                <div style="font-size: 48px; margin-bottom: 16px;">ðŸŽ‰</div>
                <h4 style="font-family: 'Playfair Display', Georgia, serif; font-size: 24px; font-weight: 700; color: #2D5F4F; margin-bottom: 16px;">Here's Your Discount Code!</h4>
                <div style="background: rgba(45,95,76,0.1); border: 2px solid #2D5F4C; border-radius: 16px; padding: 20px; margin-bottom: 16px;">
                    <p style="font-size: 12px; color: #64748B; margin-bottom: 8px;">Use this code at checkout:</p>
                    <p style="font-size: 32px; font-weight: 700; color: #2D5F4C; margin-bottom: 8px; letter-spacing: 2px;">WELCOME15</p>
                    <p style="font-size: 12px; color: #2D5F4F;">Save 15% on your first order</p>
                </div>
                <p style="font-size: 12px; color: rgba(100,116,139,0.7); margin-bottom: 16px;">ðŸ“§ We'll also send this to: ${email}</p>
                <a href="/products/butter-oasis-moisturizing-balm" style="display: inline-block; background: linear-gradient(to right, #2D5F4C, #1A3A2E); color: white; padding: 16px 32px; border-radius: 9999px; font-weight: 700; text-decoration: none; box-shadow: 0 10px 25px rgba(45,95,76,0.3);">
                    Shop Now & Save 15%
                </a>
            </div>
        `;

        // Close popup after 20 seconds
        setTimeout(closeExitPopup, 20000);
    });

    function showExitPopup() {
        if (exitIntentShown) return;

        // Don't show if email already captured
        if (localStorage.getItem('drbExitPopupEmail')) return;

        exitIntentShown = true;
        sessionStorage.setItem('drbExitPopupShown', 'true');
        exitPopup.classList.add('show');
        document.body.style.overflow = 'hidden';
    }

    function closeExitPopup() {
        exitPopup.classList.remove('show');
        document.body.style.overflow = '';
    }
})();
</script>

{% schema %}
{
  "name": "Exit Intent Popup",
  "tag": "section",
  "class": "exit-intent-popup",
  "settings": [
    {
      "type": "text",
      "id": "discount_code",
      "label": "Discount Code",
      "default": "WELCOME15"
    },
    {
      "type": "text",
      "id": "discount_percent",
      "label": "Discount Percentage",
      "default": "15"
    }
  ]
}
{% endschema %}
