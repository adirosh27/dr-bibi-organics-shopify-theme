<script>
  // Quantity controls
  function increaseQty() {
    const input = document.getElementById('quantity');
    input.value = parseInt(input.value) + 1;
    updateTotal();
  }

  function decreaseQty() {
    const input = document.getElementById('quantity');
    if (parseInt(input.value) > 1) {
      input.value = parseInt(input.value) - 1;
      updateTotal();
    }
  }

  function updateTotal() {
    const qty = parseInt(document.getElementById('quantity').value);
    const price = {{ product.price }} / 100;
    document.getElementById('totalPrice').textContent = '$' + (qty * price).toFixed(2);
  }

  // Image gallery
  function changeProductImage(imageUrl, button) {
    document.getElementById('mainProductImage').src = imageUrl;
    document.querySelectorAll('.flex.gap-3 button').forEach(btn => {
      btn.classList.remove('border-emerald');
      btn.classList.add('border-transparent');
    });
    button.classList.remove('border-transparent');
    button.classList.add('border-emerald');
  }
</script>
